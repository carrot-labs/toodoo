<!DOCTYPE html>
html(lang="en", ng-app="toodoo")
head
  base(href="/")
  meta(charset="UTF-8")
  title Toodoo | To-do list webapp
  link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")

body
  div.container
    div.navbar.navbar-default
      div.navbar-header

      div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href="#") Toodoo

      div#navbar.navbar-collapse.collapse
        ul.nav.navbar-nav
          li
            a(href="/todos") All Todos

          li
            a(href="/todos/create") Create new     

        ul.nav.navbar-nav.navbar-right
          li
            a(href="/login") Sign In

    div(ng-view)
    
  //- Angular dependencies
  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.27/angular.min.js")
  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.27/angular-route.js")
  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.27/angular-resource.js")

  //- Javascripts
  script(src="assets/javascripts/app.js")